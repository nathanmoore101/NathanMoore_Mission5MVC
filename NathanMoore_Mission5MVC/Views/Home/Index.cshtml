        <div class="row">
            <div class="col-md-8">
                <div id="carouselExampleControls2" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Project 2/IMG_3511.jpeg" class="d-block w-100 carousel-img" alt="Miata Restoration Project 1">
                        </div>
                        <div class="carousel-item">
                            <img src="Project 2/IMG_3512.jpeg" class="d-block w-100 carousel-img" alt="Miata Restoration Project 1">
                        </div>
                        <div class="carousel-item">
                            <img src="Project 2/IMG_3517.jpeg" class="d-block w-100 carousel-img" alt="Miata Restoration Project 1">
                        </div>
